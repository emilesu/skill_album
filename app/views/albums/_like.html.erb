<% if @album.liked_users.any? %>
  <%= @album.liked_users.map{ |u| u.display_name }.join(",") %> 点了赞
<% end %>

<% if current_user %>
  <% if @album.find_like(current_user) %>
    <%= link_to "-1", unlike_album_path(@album), :method => :post, :remote => true, :clase => "btn btn-default", :class => "btn btn-default" %>
  <% else %>
    <%= link_to "+1", like_album_path(@album), :method => :post, :remote => true, :clase => "btn btn-default", :class => "btn btn-default" %>
  <% end %>
<% end %>
